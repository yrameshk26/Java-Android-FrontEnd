<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layoutdemo.layoutdemo.MainActivity"
    android:rowCount="6"
    android:columnCount="2">

    <Button
        android:text="Linear Layout"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:id="@+id/btnMainMenu"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMM"
        android:layout_below="@+id/textViewMM"
        android:layout_alignLeft="@+id/btnLinearLayout"
        android:layout_alignStart="@+id/btnLinearLayout"
        android:onClick="LinearLayout"/>

    <Button
        android:text="Relative Layout"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:id="@+id/button3"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMM"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/btnMainMenu"
        android:layout_centerHorizontal="true"
        android:onClick="RelativeLayout"/>

    <Button
        android:text="Frame Layout"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:id="@+id/button4"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMM"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="FrameLayout"/>

    <Button
        android:text="Grid Layout"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:id="@+id/button5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMM"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="GridLayout"/>

    <Button
        android:text="Table Layout"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:id="@+id/btnLinearLayout"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMM"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="TableLayout"/>

    <TextView
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textViewMM"
        android:textSize="36sp"
        android:textColor="?android:attr/colorControlActivated" />

</RelativeLayout>
