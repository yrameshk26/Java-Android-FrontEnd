<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uidemo.uidemo.MainActivity">

    <Button
        android:text="Toast"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnToast"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:onClick="displayToastMsg"/>

    <Button
        android:text="Alert Dialog"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlertDialog"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btnToast"
        android:onClick="exitAlertDialog"/>

    <Button
        android:text="Notification"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:id="@+id/btnNotification"
        app:layout_constraintRight_toRightOf="@+id/btnAlertDialog"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertDialog"
        app:layout_constraintLeft_toLeftOf="@+id/btnAlertDialog"
        android:onClick="statusNotification"/>

    <TextView
        android:text="App to Test UI Components"
        android:layout_width="299dp"
        android:layout_height="26dp"
        android:id="@+id/uITextView"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnToast"
        android:layout_marginBottom="40dp" />

</android.support.constraint.ConstraintLayout>
